<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f6f8;
    padding: 40px;
    color: #333;
  }

  h1 {
    color: #2c3e50;
    margin-bottom: 30px;
    text-align: center;
  }

  form {
    background-color: #fff;
    max-width: 500px;
    margin: 0 auto;
    padding: 30px 40px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  form p {
    margin-bottom: 20px;
    font-weight: bold;
    color: #34495e;
  }

  input {
    width: 100%;
    padding: 10px 12px;
    margin-top: 6px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 14px;
  }

  button {
    width: 100%;
    padding: 12px;
    background-color: #3498db;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #2980b9;
  }
</style>
<h1><%= cliente.id ? 'Editar' : 'Novo' %> Cliente</h1>
<form method="POST" action="<%= cliente.id ? '/editar/' + cliente.id : '/novo' %>">
  <p>Nome: <input name="nome" value="<%= cliente.nome || '' %>" placeholder="Nome" required /></p>
  <p>CPF: <input name="cpf" value="<%= cliente.cpf || '' %>" placeholder="CPF" required /></p>
  <p>Data de Nascimento: <input name="Data_nascimento" value="<%= cliente.data_nascimento || '' %>" placeholder="Data de Nascimento" required /></p>
  <p>Email: <input name="email" value="<%= cliente.email || '' %>" placeholder="Email" required /></p>
  <p>Endereço: <input name="endereco" value="<%= cliente.endereco || '' %>" placeholder="Endereço" /></p>
  <p>Telefone: <input name="telefone" value="<%= cliente.telefone || '' %>" placeholder="Telefone" /></p>
  <button type="submit">Salvar</button>
</form>